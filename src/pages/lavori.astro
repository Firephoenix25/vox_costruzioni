---
import "../styles/global.css";
import Menu from "../layouts/menu.astro";
import Footer from "../layouts/footer.astro";
import Slideshow from "../components/slideshow.svelte";

import image1 from "../assets/Lavoro_1.jpeg";
import image2 from "../assets/Lavoro_2.jpeg";
import image3 from "../assets/Lavoro_3.jpeg";
import image4 from "../assets/Lavoro_4.jpeg";
import image5 from "../assets/Lavoro_5.jpeg";
import image6 from "../assets/Lavoro_6.jpeg";
import image7 from "../assets/Lavoro_7.jpeg";
import image8 from "../assets/Lavoro_8.jpeg";
import image9 from "../assets/Lavoro_9.jpeg";
---

<Menu />

<!-- Section -->

<section class="text-gray-600 body-font">
  <div class="container px-5 py-10 mx-auto ">
    <div class="flex flex-col text-center w-full mb-20">
      <h1
        class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900"
      >
        I NOSTRI LAVORI
      </h1>
    
    </div>
    <div class="grid overflow-hidden grid-cols-3 grid-rows-3 gap-4 h-screen">
      <Slideshow carouselPhotos={[image4, image9]} text="Edificio Residenziale" mod="" client:load />
      <Slideshow carouselPhotos={[image2, image3]} text="Casa Privata" mod="" client:load />
      <Slideshow carouselPhotos={[image1]} text="Casa Privato" mod="" client:load />
      <Slideshow carouselPhotos={[image7]} text="Complesso Residenziale" mod="row-span-2" client:load />
      <Slideshow carouselPhotos={[image8]} text="Edificio Privata" mod="row-span-2" client:load />
      <Slideshow carouselPhotos={[image5,image6]} text="Casa Privata" mod="row-span-2"  client:load />
    </div>
  </div>
</section>
<Footer />
